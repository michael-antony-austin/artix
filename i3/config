# ArcoLinux Logout
bindsym $mod+Delete exec --no-startup-id i3-msg exit
bindsym $mod+Ctrl+Delete exec --no-startup-id "loginctl poweroff"
bindsym $mod+Control+l exec --no-startup-id i3lock -e -f -i /home/mike/.config/wm-wallpapers/arch-key.jpg

